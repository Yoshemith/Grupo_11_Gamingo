<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/register.css">
<body>
    <%- include('../partials/header.ejs') %>

    <main class="main-login">
        <div class="formularios">      
            <div class="form2"> 
                <form action="/editProfile" method="POST" enctype="multipart/form-data" class="editProfile-form">
                    <div class="input-form">
                        <label>Imagen de Perfil*</label>
                        <input type="file" name="imagenUsuario">
                    </div>
                    <div class="input-form">
                        <label for="nombre">Nombre(s)*</label>
                        <input type="text" name="nombre" id="nombre" placeholder="Nombre" value="<%= resultado.firstname%>" required>
                        <% if(locals.errors && errors.nombre){  %>
                            <div class="errores">
                                <p><%= errors.nombre.msg %></p>
                            </div>
                        <% } %>
                    </div>
                    <div class="input-form">
                        <label for="apellido">Apellidos*</label>
                        <input type="text" name="apellido" id="apellido" placeholder="Apellidos" value="<%= resultado.lastname%>" required>
                        <% if(locals.errors && errors.apellido){  %>
                            <div class="errores">
                                <p><%= errors.apellido.msg %></p>
                            </div>
                        <% } %>
                    </div>
                    <div class="input-form">
                        <label for="correo">Correo Electrónico*</label>
                        <input type="text" name="correo" id="correo" placeholder="tu@correo.com" value="<%= resultado.email%>" required>
                        <% if(locals.errors && errors.correo){  %>
                            <div class="errores">
                                <p><%= errors.correo.msg %></p>
                            </div>
                        <% } %>
                    </div>
                    <div class="input-form">
                        <label for="contraseña">Contraseña Actual*</label>
                        <input type="password" name="contraseña" id="contraseña" placeholder="Ingresa tu contraseña" required>
                        <div class="eye">
                            <i class="fas fa-eye" onclick="funcionContraseña()"></i>
                        </div>
                        <% if(locals.errors && errors.contraseña){  %>
                            <div class="errores">
                                <p><%= errors.contraseña.msg %></p>
                            </div>
                        <% } %>
                    </div>
                    <div class="input-form">
                        <div class="campos">
                            <p>*Campos requeridos</p>
                        </div>
                    </div>
                    <div class="input-form">
                        <button type="submit">EDITAR PERFIL</button>
                    </div>
                </form>
                <form action="/destroyProfile" method="POST">
                    <div class="input-form-destroy">
                        <button type="submit">ELIMINAR PERFIL</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="/js/editProfileValidation.js" type="text/javascript"></script>
</body>
</html>