<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>

    <main class="main-login">
        <div class="botonesCrearIniciar">
            <div class="iniciar">
                <a href="/login">Iniciar sesión</a>
            </div>
            <div class="crear">
                <a href="/register">Crear cuenta</a>
            </div>
        </div>
        <div class="formularios">      
            <div class="form1"> 
                <form action="/login" method="POST">
                    <div class="input-form">
                        <label for="correo">Correo Electrónico*</label>
                        <input type="text" name="correo" id="correo" placeholder="tu@correo.com" value="<%= locals.old ? old.correo : null %>" required>
                        <% if(locals.errors && errors.correo){  %>
                            <div class="errores">
                                <p><%= errors.correo.msg %></p>
                            </div>
                        <% } %>
                    </div>
                    <div class="input-form">
                        <label for="contraseña">Contraseña*</label>
                        <input type="password" name="contraseña" id="contraseña" placeholder="Ingresa tu contraseña" required>
                        <div class="eye" id="iconPass">
                            <i class="fas fa-eye" onclick="funcionContraseña()"></i>
                        </div>
                        <div class="eye2" id="iconPass2">
                            <i class="fas fa-eye-slash"></i>
                        </div>
                        <% if(locals.errors && errors.contraseña){  %>
                            <div class="errores">
                                <p><%= errors.contraseña.msg %></p>
                            </div>
                        <% } %>
                    </div>
                    <div class="input-form">
                        <div class="recordarme">
                            <label for="recordar">Recordarme</label>
                            <input type="checkbox" name="recordar" id="recordar">
                        </div>
                    </div>
                    <div class="input-form">
                        <button type="submit">INGRESAR</button>
                    </div>
                    <% if(locals.errors && errors.invalido){  %>
                        <div class="errores">
                            <p><%= errors.invalido.msg %></p>
                        </div>
                    <% } %>
                    <div class="input-form">
                        <p>¿Olvidaste tu contraseña? <a href="/changePass"> Recuperar contraseña</a></p>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>