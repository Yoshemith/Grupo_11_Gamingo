<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/register.css">
<body>
    <%- include('../partials/header.ejs') %>

    <main class="main-login">
        <div class="formularios">      
            <div class="form2"> 
                <form action="/editPass" method="POST" class="editProfile-form">
                    <div class="input-form">
                        <label for="contraseña">Contraseña Actual*</label>
                        <input type="password" name="contraseña" id="contraseña" placeholder="Ingresa tu contraseña" required>
                        <div class="eye">
                            <i class="fas fa-eye" onclick="funcionContraseña()"></i>
                        </div>
                        <% if(locals.errors && errors.contraseña){  %>
                            <div class="errores">
                                <p><%= errors.contraseña.msg %></p>
                            </div>
                        <% } %>
                    </div>
                    <div class="input-form">
                        <label for="contraseñaNueva">Contraseña Nueva*</label>
                        <input type="password" name="contraseñaNueva" id="contraseñaNueva" placeholder="Nueva contraseña">
                        <div class="eye">
                            <i class="fas fa-eye" onclick="funcionContraseña2()"></i>
                        </div>
                        <% if(locals.errors && errors.contraseña){  %>
                            <div class="errores">
                                <p><%= errors.contraseña.msg %></p>
                            </div>
                        <% } %>
                    </div>
                    <div class="input-form">
                        <div class="campos">
                            <p>*Campos requeridos</p>
                        </div>
                    </div>
                    <div class="input-form">
                        <button type="submit">Cambiar Contraseña</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="/js/editProfileValidation.js" type="text/javascript"></script>
</body>
</html>