<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>

    <main class="create-product-main">
        <div class="update-product-main">
            <section class="update-products">
                <div class="dates">
                    <section class="profile-nametype">
                        <div class="profile-divs">
                            <div class="profile-name">
                                <h4>Nombre del usuario</h4>
                            </div>
                            <div class="profile-type">
                                <p>Administrador</p>
                            </div>
                        </div>
                        <div class="profile-photo">
                            <img src="/img/user-profile-beta.png" alt="Foto del usuario">
                        </div>
                    </section>
                </div>
                <div class="titulo-product">
                    <h3>Editar producto</h3>
                </div>
                <div class="formulario-update">
                    <form action="/products/<%= resultado[0].id%>/edit?_method=PUT" method="POST" class="create-form" enctype="multipart/form-data">
                        <div class="control-form" >
                            <label for="nombreProducto">Nombre del producto</label>
                            <input type="text" name="nombreProducto" id="nombreProducto" placeholder="Ingresa nombre del producto" minlength="5" class="control" value="<%= resultado[0].name%>" required>
                        </div>
                        <div class="control-form">
                            <label for="categoria">Categoria</label>
                            <select name="categoria" id="categoria" aria-placeholder="-Selecciona categoria-">
                                <% switch (resultado[0].category) {
                                    case 'switch': %>
                                    <option value="switch">SWITCH</option>
                                    <option value="xbox-one">XBOX ONE</option>
                                    <option value="xbox-360">XBOX 360</option>
                                    <option value="ps5">PS5</option>
                                    <option value="ps4">PS4</option>
                                        <% break; 
                                    case 'xbox-one': %>
                                    <option value="xbox-one">XBOX ONE</option>
                                    <option value="xbox-360">XBOX 360</option>
                                    <option value="ps5">PS5</option>
                                    <option value="ps4">PS4</option>
                                    <option value="switch">SWITCH</option>
                                        <% break; 
                                    case 'xbox-360': %>
                                    <option value="xbox-360">XBOX 360</option>
                                    <option value="xbox-one">XBOX ONE</option>
                                    <option value="ps5">PS5</option>
                                    <option value="ps4">PS4</option>
                                    <option value="switch">SWITCH</option>
                                    <% break; 
                                    case 'ps5': %>
                                    <option value="ps5">PS5</option>
                                    <option value="ps4">PS4</option>
                                    <option value="switch">SWITCH</option>
                                    <option value="xbox-360">XBOX 360</option>
                                    <option value="xbox-one">XBOX ONE</option>
                                    <% break; 
                                    case 'ps4': %>
                                    <option value="ps4">PS4</option>
                                    <option value="ps5">PS5</option>
                                    <option value="switch">SWITCH</option>
                                    <option value="xbox-360">XBOX 360</option>
                                    <option value="xbox-one">XBOX ONE</option>
                                    <% break; 
                                    default: break; }%>
                                
                            </select>
                
                        </div>
                        <div class="control-form">
                            <label for="precio">Precio</label>
                            <input type="number" name="precio" id="precio" placeholder="Ingresa una cantidad" class="control" value="<%= resultado[0].price%>" required>
                        </div>
                        <div class="control-form">
                            <label for="descripcion">Descripcion</label>
                            <textarea name="descripcion" id="descripcion" cols="20" rows="6" placeholder="Escriba una descripcion del producto" required><%= resultado[0].description%></textarea>
                        </div>
                        <div class="control-form">
                            <label for="imagen">Imagen del producto</label>
                            <div class="img-product">
                                <div class="product-img">
                                    <img src="/img/products/<%= resultado[0].image %>" alt="Imagen del producto">
                                </div>
                                <div class="link-update">
                                    <a href="#">Editar</a>
                                    
                                </div>
                            </div>
                            <input type="file" name="product-image" id="product-image" placeholder="Ingresa una Imagen" class="control" >
                        </div>
                        <div class="control-buttons">
                            <div class="create-button">
                                <button type="submit">GUARDAR CAMBIOS</button>
                            </div>
                            <div class="cancel-button">
                                <button type="reset">CANCELAR</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
            <section class="view-products">
                <div class="title-add">
                    <div class="titulo-product">
                        <h3>Productos</h3>
                    </div>
                    <div class="add-product">
                        <h3><a href="/create">+ AGREGAR PRODUCTO</a></h3>
                    </div>
                </div>
                <div class="product">
                    <div class="inf-prod">
                        <div class="img-product2">
