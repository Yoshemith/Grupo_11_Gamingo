<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>
    
<main class="create-product-main">
    <section class="profile-nametype">
        <div class="profile-divs">
            <div class="profile-name">
                <h4>Nombre del usuario</h4>
            </div>
            <div class="profile-type">
                <p>Administrador</p>
            </div>
        </div>
        <div class="profile-photo">
            <img src="/img/user-profile-beta.png" alt="Foto del usuario">
        </div>
    </section>
    <div class="titulo-create">
        <h2>Agregar nuevo producto</h2>
    </div>
    <form action="/products" method="POST" class="create-form" enctype="multipart/form-data">
        <div class="control-form" >
            <label for="name">Nombre del producto</label>
            <input type="text" name="name" id="name" placeholder="Ingresa nombre del producto" minlength="5" class="control" required>
        </div>
        <div class="control-form">
            <label for="category">Categoria</label>
            <select name="category" id="category" required>
                <option value="" disabled selected hidden>-Selecciona categoria-</option>
                <option value="switch">SWITCH</option>
                <option value="xbox one">XBOX ONE</option>
                <option value="xbox 360">XBOX 360</option>
                <option value="ps5">PS5</option>
                <option value="ps4">PS4</option>
            </select>

        </div>
        <div class="control-form">
            <label for="price">Precio</label>
            <input type="number" name="price" id="price" placeholder="Ingresa una cantidad" class="control" required>
        </div>
        <div class="control-form">
            <label for="description">Descripcion</label>
            <textarea name="description" id="description" cols="20" rows="6" placeholder="Escriba una descripcion del producto" required></textarea>
        </div>
        <div class="control-form-container">
            <label for="container">Imagen del producto</label>
            <div class="container">
                <div class="drag-area">
                    <div class="drag-icon">
                        <i class="fas fa-image"></i>
                    </div>
                    <span class="drag-header"> Arrastra y suelta la imagen</span>
                    <span class="drag-header"> aqui o 
                        <span class="browse-button"> elige un archivo</span>
                    </span>
                    <input type="file" name="product-image" id="product-image">
                    <span class="drag-support">
                        Soportados: JPEG, JPG, PNG
                    </span>
                </div>
            </div>
        </div>
        <div class="control-buttons">
            <div class="create-button">
                <button type="submit">CREAR NUEVO PRODUCTO</button>
            </div>
            <div class="cancel-button">
                <button type="reset">CANCELAR</button>
            </div>
        </div>
    </form>
</main>

<%- include('../partials/footer.ejs') %>

<script src="/js/drag-script.js" type="text/javascript"></script>
</body>
</html>