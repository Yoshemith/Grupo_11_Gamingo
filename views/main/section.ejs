<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/header.ejs') %>

    <%- include('../partials/banner.ejs') %>

    <div class="products">
        <% products.forEach(function(product){ 
            let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0)
        %>
        <article>
            <a href="/products/<%= `${product.id}` %>"><img src="/img/products/<%= product.image %>" alt=""></a>
            <div class="main-article">
                <h4 class="description"><%= product.name %></h4>
                <p class="price">$ <%= toThousand(finalPrice) %></p>
                <div class="rating">
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star"></span>
                    <span class="fa fa-star"></span>
                </div>
            </div>
        </article>
        <% }) %>
    </div>
        
    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>